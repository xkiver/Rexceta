<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="17dp"
        android:id="@+id/textView6"
        android:textStyle="normal|bold"
        android:textSize="24sp"
        android:textAlignment="center" />

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView8"
        android:layout_alignTop="@+id/imageView4"
        android:layout_toRightOf="@+id/imageView4"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="14dp" />

    <ImageView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="11dp"
        android:id="@+id/imageView4"
        android:clickable="true"
        android:maxWidth="@android:dimen/notification_large_icon_width"
        android:maxHeight="@dimen/activity_vertical_margin"
        android:layout_below="@+id/textView6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:cropToPadding="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar3"
        android:scaleY="0.4"
        android:scaleX="0.41"
        android:isIndicator="true"
        android:transformPivotX="20dp"
        android:transformPivotY="0dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/imageView4"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3" />

    <TextView
        android:text="ValoraciÃ³n:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/ratingBar3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@android:drawable/presence_video_online"
        android:id="@+id/imageView5"
        android:cropToPadding="true"
        android:layout_marginRight="55dp"
        android:layout_marginEnd="55dp"
        android:scaleY="2"
        android:scaleX="2"
        android:minHeight="37dp"
        android:minWidth="37dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="Ir a Receta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:id="@+id/button2"
        android:textSize="12sp"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp" />
</RelativeLayout>
